
<%= stylesheet_link_tag "application", media: "all" %>

<%= image_tag("pretty-book.gif", class: "img_book") %>

<p id="notice"><%= notice %></p>

<h1>Publishings</h1>

<table>
  <thead>
    <tr>
      <th>Book Name</th>
      <th>Date</th>
      <th>Price</th>
       <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publishings.each do |publishing| %>
      <tr>
        <td><%= publishing.name %></td>
        <td><%= publishing.date %></td>
        <td><%= publishing.price %></td>
         <td><%= publishing.author_id %></td>
        <td><%= link_to 'Show', publishing %></td>
        <td><%= link_to 'Edit', edit_publishing_path(publishing) %></td>
        <td><%= link_to 'Destroy', publishing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Publishing', new_publishing_path %>

